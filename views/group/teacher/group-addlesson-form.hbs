<div class="container">
  <form action="/group-addlesson" method="POST" name="groupAddlesson" id="groupAddlesson">
    <input type="hidden" name="actionUser" value="{{user._id}}">
    <input type="hidden" name="actionGroup" value="{{groupId}}">
    <div class="form-group row">
      <label for="lessonTitle" class="col-sm-2 col-form-label">Название урока</label>
      <div class="col-sm-8">
        <input type="text" id="lessonTitle" name="lessonTitle"  class="form-control">
      </div>
    </div>
    <div class="form-group row">
      <label for="lessonContent" class="col-sm-2 col-form-label">Содержание</label>
      <div class="col-sm-8">
        <textarea id="lessonContent"  rows="10" name="lessonContent"   class="form-control"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="lessonHometask" class="col-sm-2 col-form-label">Домашнее задание</label>
      <div class="col-sm-8">
        <textarea id="lessonHometask" rows="5" name="lessonHometask"  class="form-control"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Создать урок</button>
  </form>
</div>
<div id="myform_errorloc" class="error_strings"></div>
