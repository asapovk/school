<div class="container">
{{#if group}}
  <form action="/group-edit" method="POST" name="groupCreate" id="groupCreate">
{{else}}
  <form action="/group-create" method="POST" name="groupCreate" id="groupCreate">
{{/if}}
    <input type="hidden" name="actionUser" value="{{user._id}}">
    <input type="hidden" name="actionGroup" value={{group._id}}>
    <div class="form-group row">
      <label for="groupTitle" class="col-sm-2 col-form-label">Название группы</label>
      <div class="col-sm-8">
        <input type="text" id="groupTitle" name="groupTitle" placeholder="Название группы" value="{{group.groupName}}" class="form-control">
        <small class="form-text text-muted">Название группы</small>
      </div>
    </div>
    <div class ="form-group row">
      <label for="time" class="col-sm-2 col-form-label">Время занятий</label>
      <div class="col-sm-8">
        <input type="text" id="groupTime" name="groupTime" placeholder="Пт 18:00 - 18:30" value="{{group.time}}" class="form-control">
        <small class="form-text text-muted">Время проведения занятий</small>
      </div>
    </div>
    {{# if group}}
    <button type="submit" class="btn btn-default">Редактировать группу</button>
    {{else}}
    <button type="submit" class="btn btn-default">Создать группу</button>
    {{/if}}
  </form>
</div>
<div id="myform_errorloc" class="error_strings"></div>
