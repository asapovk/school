<div class="container">
  <form action="/user-edit" method="POST">
    <input type="hidden" name="actionUser" value="{{user._id}}">
    <div class="form-group row">
      <label for="groupTitle" class="col-sm-2 col-form-label">E-mail</label>
      <div class="col-sm-8">
        <input type="text"  name="userEmail" placeholder="example@mail.com" value="{{user.email}}" class="form-control">
        <small class="form-text text-muted">Электронная почта</small>
      </div>
    </div>
    <div class ="form-group row">
      <label for="time" class="col-sm-2 col-form-label">Телефон</label>
      <div class="col-sm-8">
        <input type="text"  name="userPhone" placeholder="+71234567890" value="{{user.phone}}" class="form-control">
        <small class="form-text text-muted">Телефон для связи</small>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Редактировать профиль</button>
  </form>
</div>
