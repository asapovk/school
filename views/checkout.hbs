<div class="container">
  <form action="/payment" method="POST" name="myform" id="myform">
    <input type="hidden" id="paymentType" name="paymentType" class="form-control" value="">
    <input type="hidden" id="shopId" name="shopId" class="form-control" value="96984">
    <input type="hidden" id="scid" name="scid" class="form-control" value="89254">
    <input type="hidden" id="customerNumber" name="customerNumber" class="form-control" value = {{user.vkId}}>
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label"> Email</label>
      <div class="col-sm-8">
        <input type="email" id="email" name="email" placeholder="name@example.com" class="form-control">
        <small class="form-text text-muted"> E-mail для уведомления об оплате.</small>
      </div>
    </div>
    <div class ="form-group row">
      <label for="phone" class="col-sm-2 col-form-label"> Телефон</label>
      <div class="col-sm-8">
        <input type="phone" id="phone" name="phone" placeholder="+71234567890" class="form-control">
        <small class="form-text text-muted"> Мобильный телефон для подтверждения оплаты.</small>
      </div>
    </div>
    <div class="form-group row">
      <label for="sum" class="col-sm-2 col-form-label"> Сумма</label>
      <div class="col-sm-3">
        <input type="sum" id="sum"  name="sum" class="form-control">
        <small class="form-text text-muted"> Сумма в рублях зачисляемая на счет.</small>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Пополнить баланс</button>
  </form>
</div>
<div id="myform_errorloc" class="error_strings"></div>
<script src = "/public/js/form-validator.js"></script>
